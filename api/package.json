{
  "name": "api",
  "version": "1.0.0",
  "description": "Crafted-to-Go API",
  "main": "app.js",
  "scripts": {
    "start": "node ./dist/server.js",
    "dev": "npm run db:pull && npm run db:client && tsx --watch server.ts",
    "build": "tsc",
    "docker:build": "docker build -f Dockerfile -t crafted-api .",
    "docker:run": "docker run --name crafted-api -p 3000:3000 crafted-api",
    "docker:start": "npm run docker:build && npm run docker:run",
    "db:client": "prisma generate",
    "db:pull": "prisma db pull",
    "lint": "eslint \"./**/*.ts\"",
    "lint:fix": "eslint \"./**/*.ts\" --fix",
    "test": "vitest",
    "test:api": "tsx server.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/postgres": "^6.0.2",
    "@fastify/sensible": "^6.0.0",
    "@prisma/client": "^6.5.0",
    "argon2": "^0.43.0",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.5.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.11",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fastify-tsconfig": "^3.0.0",
    "prettier": "^3.2.5",
    "typescript-eslint": "^8.28.0",
    "vitest": "^3.1.4",
    "vitest-mock-extended": "^3.1.0"
  }
}
